<view class="page">
  <view class="page__bd">
    <form bindsubmit="formSubmit">
      <view class="weui-cells__title">沸点评论</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" name="content" placeholder="请输入您的评论" auto-height style="min-height: 3.3em" maxlength="140" bindinput="change" />
            <view class="weui-textarea-counter">{{len || '0'}}/140</view>
          </view>
        </view>
      </view>
      <view class="weui-btn-area">
        <button formType="submit" class="weui-btn" type="primary">提交反馈</button>
      </view>
    </form>
  </view>
</view>