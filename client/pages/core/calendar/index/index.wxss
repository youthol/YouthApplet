page {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
}

/* calendar */

.calendar {
  display: flex;
  flex-flow: column nowrap;
}

/* handle */

.handle {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  font-size: 14px;
  color: #ff629a;
}

.arraw {
  width: 36rpx;
  height: 36rpx;
}

.date-area {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 80rpx;
  text-align: center;
}

/* weeeks */

.weeks {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  opacity: 0.5;
  background: #dddee1;
  color: #1c2438;
}

.week {
  flex-grow: 1;
  text-align: center;
  font-size: 28rpx;
}

/* days */

.days {
  display: flex;
  flex-flow: row wrap;
  height: 500rpx;
  background: #f8f8f9;
}

.grid-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 107.1428571429rpx;
  color: #008aff;
}

.day {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  color: #008aff;
  font-size: 26rpx;
  font-weight: 200;
}

.day-select {
  position: relative;
  left: 0;
  top: 0;
  border-radius: 50%;
  background: #6cf;
  color: #fff;
}

/* events */

.events {
  margin-top: 30rpx;
}

.ent_desc {
  width: 100%;
  border-bottom: 0.5px solid #e9eaec;
  padding: 0 30rpx;
  font-size: 0.9em;
  color: #80848f;
  line-height: 3em;
  box-shadow: 0 -10rpx 5rpx #eee;
}

.ent_list {
  display: flex;
  flex-flow: column nowrap;
  padding: 30rpx;
}

.ent_item {
  width: 100%;
  line-height:2em;
}

.ent_item text {
  display: inline-block;
  width: 6em;
  font-weight: 700;
  color:#80848f;
}