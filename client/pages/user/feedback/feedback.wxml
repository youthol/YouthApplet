<view class="page">
  <view class="page__hd">
    <view class="page__title">留言与建议</view>
  </view>
  <view class="page__bd">
    <form bindsubmit="formSubmit">
      <view class="weui-cells__title">反馈信息</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" name="feedback" placeholder="请输入您的反馈内容" auto-height style="min-height: 3.3em" maxlength="140" bindinput="change" />
            <view class="weui-textarea-counter">{{len || '0'}}/140</view>
          </view>
        </view>
      </view>
      <view class="weui-btn-area">
        <button formType="submit" class="weui-btn" type="primary">提交反馈</button>
      </view>
    </form>
  </view>
  <view class="weui-footer weui-footer_fixed-bottom">
    <view class="weui-footer__links">
      <navigator url="/pages/user/about/about" class="weui-footer__link">青春在线</navigator>
      <navigator url="/pages/core/index/index" class="weui-footer__link">学生服务</navigator>
    </view>
    <view class="weui-footer__text">Copyright © 2017 youthol.cn</view>
  </view>
</view>