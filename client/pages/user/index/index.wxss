.page__hd {
  position: relative;
  height: 300rpx;
  padding: 0;
  font-size: 14px;
}

.hd_bgcolor {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50%;
  background-color: #2d8cf0;
}

.hd_info {
  position: absolute;
  top: 10rpx;
  bottom: 10rpx;
  left: 0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: calc(100% - 30px);
  margin: 0 15px;
  padding: 0 36rpx;
  background-color: #fff;
  border-radius: 10rpx;
  /* box-shadow: 0 5px 30px #e9eaec; */
}

.info_avatar {
  width: 160rpx;
  height: 160rpx;
  border: 2px solid #dddee1;
  border-radius: 50%;
  margin: 0 15rpx;
}

.info_nickname {
  font-weight: 700;
  font-size: 1.2em;
  transform: translate(10rpx, 20rpx);
}

.info_gobind {
  position: absolute;
  right: 0;
  top: calc(150rpx - 74rpx);
  padding: 0 20rpx;
  min-height: 64rpx;
  line-height: 64rpx;
  color: #fff;
  background-color: #008aff;
}

.info_gobind::before {
  content: '';
  position: absolute;
  top: 0;
  left: -30rpx;
  width: 32rpx;
  height: 64rpx;
  border-radius: 100% 0 0 100%/50%;
  background-color: #008aff;
}

